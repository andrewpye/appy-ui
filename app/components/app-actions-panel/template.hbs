{{#if (can "edit app" app)}}
	{{bs-glyphicon icon="pencil" tooltip="Edit this app"}}
{{/if}}

{{#if (can "delete app" app)}}
	{{bs-glyphicon icon="remove" tooltip="Delete this app"}}
{{/if}}

{{#if (can "publish app" app)}}
	{{#if (eq app.status "draft")}}
		{{#async-button action=(action (perform setAppStatusTask) "submitted")}}
			{{#bs-tooltip}}Submit this app{{/bs-tooltip}}
			{{bs-glyphicon icon="ok-circle"}}
		{{/async-button}}
	{{else}}
		{{#async-button action=(action (perform setAppStatusTask) "draft")}}
			{{#bs-tooltip}}Unsubmit this app{{/bs-tooltip}}
			{{bs-glyphicon icon="remove-circle"}}
		{{/async-button}}
	{{/if}}
{{/if}}

{{#if (can "approve app" app)}}
	{{#if (eq app.status "submitted")}}
		{{#async-button action=(action (perform setAppStatusTask) "approved")}}
			{{#bs-tooltip}}Publish this app{{/bs-tooltip}}
			{{bs-glyphicon icon="ok-circle"}}
		{{/async-button}}
	{{else}}
		{{#async-button action=(action (perform setAppStatusTask) "submitted")}}
			{{#bs-tooltip}}Unpublish this app{{/bs-tooltip}}
			{{bs-glyphicon icon="remove-circle"}}
		{{/async-button}}
	{{/if}}
{{/if}}
