{{#file-dropzone name=name class="file-picker" as |dropzone queue|}}
	{{#if dropzone.active}}
		{{#if dropzone.valid}}
			Drop to choose picture
		{{else}}
			Drag and drop isn't supported
		{{/if}}
	{{else}}
		{{#file-upload
			name=name
			accept="image/*"
			multiple=false
			onfileadd=(action onFileChosen)
		}}
			{{yield}}
		{{/file-upload}}
	{{/if}}
{{/file-dropzone}}
